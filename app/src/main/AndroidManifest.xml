<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    package="com.merry.jane">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <dist:module dist:instant="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logos"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logos"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.merry.jane.CelebrateFinalActivity" />
        <activity
            android:name="com.facebook.ads.AudienceNetworkActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name="com.merry.jane.YoutubeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.merry.jane.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.merry.jane.drop.UpcomingEventsActivity"
            android:label="Church Events"
            android:parentActivityName="com.merry.jane.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.merry.jane.ClickPostActivity"
            android:theme="@style/AppTheme.NoActionBar" /> <!-- Sample AdMob App ID: ca-app-pub-3940256099942544~3347511713 -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-2023195679775199~1253287598" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" /> <!-- optional (needed if default theme has no action bar) -->
        <activity
            android:name="com.merry.jane.MainActivity"
            android:label="" />
        <activity
            android:name="com.merry.jane.RepliesActivity"
            android:label="Report"
            android:parentActivityName="com.merry.jane.MainActivity" />
        <activity
            android:name="com.merry.jane.OtherProfileActivity"
            android:label="Profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.merry.jane.ImageActivity"
            android:label="Profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.merry.jane.ChatRoomActivity"
            android:label="Chat Room"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
        <activity
            android:name="com.merry.jane.CommentsActivity"
            android:label="Comments"
            android:parentActivityName="com.merry.jane.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.merry.jane.drop.ProfileActivity"
            android:label="My Profile"
            android:parentActivityName="com.merry.jane.MainActivity" />
        <activity
            android:name="com.merry.jane.drop.UserMessageActivity"
            android:label=""
            android:parentActivityName="com.merry.jane.MainActivity" />
        <activity
            android:name="com.merry.jane.LoginActivity"
            android:label="Faith Ministries"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.merry.jane.SignUpActivity"
            android:label="Sign Up"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.merry.jane.AddPhotoActivity"
            android:label="Add Photo"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.merry.jane.ResetPasswordActivity"
            android:label="Faith Ministries"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.merry.jane.SetUpActivity"
            android:label="Faith Ministries"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.merry.jane.post.PostVideoActivity"
            android:label="Post Video">

        </activity>
        <activity
            android:name="com.merry.jane.post.UpcomingEventActivity"
            android:label="Post Upcoming Event"></activity>
        <activity
            android:name="com.merry.jane.post.PostPhotoActivity"
            android:label="Post Photo"></activity>
        <activity
            android:name="com.merry.jane.post.CelebrateActivity"
            android:label="Celebrate Someone" />
        <activity
            android:name="com.merry.jane.post.PostTextActivity"
            android:label="Post Text" />
    </application>

</manifest>